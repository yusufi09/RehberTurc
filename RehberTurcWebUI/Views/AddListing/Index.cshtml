@using RehberTurcDAL.DTOs.AddListing
@model ListingCreateDTO
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>İşletme Kayıt ve Hizmetler</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        :root {
            --primary-color: #ff758f;
            --primary-dark: #ff4d6d;
            --primary-light: #ff8fa3;
            --secondary-color: #ffb3c1;
            --background-color: #fff0f3;
            --text-dark: #590d22;
            --text-light: #800f2f;
        }

        body {
            background-color: var(--background-color);
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        /* Navbar */
        .navbar {
            background-color: white;
            box-shadow: 0 2px 10px rgba(255, 117, 143, 0.1);
        }

        .navbar-brand {
            color: var(--text-dark);
            font-weight: 700;
        }

        .nav-link {
            color: var(--text-light);
        }

        /* Ortak Stiller */
        .section-title {
            color: var(--text-dark);
            border-bottom: 2px solid var(--primary-color);
            padding-bottom: 10px;
            margin-bottom: 20px;
            font-weight: 600;
        }

        .required-field::after {
            content: " *";
            color: var(--primary-dark);
        }

        /* İşletme Kayıt Formu */
        .form-section {
            background-color: white;
            border-radius: 10px;
            padding: 25px;
            margin-bottom: 30px;
            border-left: 4px solid var(--primary-color);
            box-shadow: 0 2px 10px rgba(255, 117, 143, 0.1);
        }

        .category-card {
            cursor: pointer;
            transition: all 0.3s;
            border: 2px solid #ffe5ec;
            height: 100%;
            padding: 15px;
            text-align: center;
            border-radius: 8px;
            background-color: white;
        }

            .category-card:hover {
                transform: translateY(-5px);
                border-color: var(--primary-color);
                box-shadow: 0 5px 15px rgba(255, 117, 143, 0.1);
            }

            .category-card.selected {
                border-color: var(--primary-color);
                background-color: #fff0f3;
            }

        .btn-primary {
            background-color: var(--primary-color);
            border-color: var(--primary-color);
        }

            .btn-primary:hover {
                background-color: var(--primary-dark);
                border-color: var(--primary-dark);
            }

        /* Hizmetler Bölümü */
        .services-header h1 {
            color: var(--text-dark);
            font-weight: 700;
            font-size: 2.5rem;
            margin-bottom: 15px;
        }

        .service-card {
            background-color: white;
            border-radius: 12px;
            padding: 25px;
            box-shadow: 0 5px 15px rgba(255, 117, 143, 0.1);
            transition: all 0.3s ease;
            border-left: 4px solid var(--primary-color);
            text-align: center;
        }

            .service-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 10px 25px rgba(255, 117, 143, 0.2);
            }

        .service-icon {
            font-size: 2.5rem;
            color: var(--primary-color);
            margin-bottom: 15px;
        }

        .service-title {
            color: var(--text-dark);
            font-weight: 600;
            font-size: 1.5rem;
            margin-bottom: 10px;
        }

        .service-count {
            color: #6c757d;
            font-weight: 500;
            font-size: 1.1rem;
        }

        /* Footer */
        footer {
            background-color: white;
            color: var(--text-light);
            padding: 30px 0;
            margin-top: 50px;
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light sticky-top">
        <div class="container">
            <a class="navbar-brand" href="/">Home</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="#businessForm">İşletme Kayıt</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#services">Hizmetler</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container py-5">
        <!-- İşletme Kayıt Formu -->
        <h1 class="text-center mb-4" style="color: var(--text-dark);">İŞLETME KAYIT FORMU</h1>

        <form asp-action="Index" method="post" enctype="multipart/form-data">
            <!-- Kategori Seçimi -->
            <div class="form-section">
                <h2 class="section-title">KATEGORİ SEÇİMİ</h2><div class="row g-4">
                   
                    <select class="form-control" asp-for="CategoryId">
                        @foreach (Category item in (List<Category>)ViewBag.Categories)
                        {
                            <option value="@item.Id">@item.Name</option>
                        }

                    </select>
                </div>
                    
                <input type="hidden" id="businessCategory" name="businessCategory" required>
            </div>

            <!-- Genel Bilgiler -->


            <div class="form-section">
                <h2 class="section-title">GENEL BİLGİLER</h2>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="Name" class="form-label required-field"></label>
                        <input asp-for="Name" class="form-control" placeholder="Örnek: Deniz Manzaralı Restoran" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Slogan" class="form-label"></label>
                        <input asp-for="Slogan" class="form-control" placeholder="Örnek: Ege'nin en taze lezzetleri" />
                        <span asp-validation-for="Slogan" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="LinkUrl" class="form-label"></label>
                        <input asp-for="LinkUrl" class="form-control" placeholder="https://www.ornekrestoran.com" />
                        <span asp-validation-for="LinkUrl" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Description" class="form-label required-field"></label>
                        <textarea asp-for="Description" class="form-control" rows="4" placeholder="İşletmenizi detaylı şekilde tanıtın"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <!-- İletişim Bilgileri -->
            <div class="form-section">
                <h2 class="section-title">İLETİŞİM BİLGİLERİ</h2>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="Phone" class="form-label required-field"></label>
                        <input asp-for="Phone" class="form-control" placeholder="05XX XXX XX XX" />
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Email" class="form-label required-field"></label>
                        <input asp-for="Email" class="form-control" placeholder="iletisim@isletme.com" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
            </div>



            <!-- Konum Bilgileri -->
            <div class="form-section">
                <h2 class="section-title">KONUM BİLGİLERİ</h2>

                <div class="row mb-3">
                    <div class="col-md-4">
                        <label for="country" class="form-label required-field">Ülke</label>
                        <select class="form-select" id="country" name="CountryId"" required>
                            <option value="" selected disabled>Seçiniz</option>
                            @foreach (var country in ViewBag.Countries)
                            {
                                <option value="@country.Id">@country.Name</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-4">
                        <label for="city" class="form-label required-field">Şehir</label>
                        <select class="form-select" id="city" name="CityId" required>
                            <option value="" selected disabled>Seçiniz</option>
                            @foreach (var city in ViewBag.Cities)
                            {
                                <option value="@city.Id">@city.Tittle</option>
                            }
                        </select>
                    </div>

                    <div class="col-md-4">
                        <label for="district" class="form-label required-field">İlçe</label>
                        <select class="form-select" id="district" required>
                            <option value="" selected disabled>Seçiniz</option>
                            <option value="kadikoy">Kadıköy</option>
                            <option value="besiktas">Beşiktaş</option>
                        </select>
                    </div>
                </div>

                <div class="mb-3">
                    <label for="address" class="form-label required-field">Tam Adres</label>
                    <textarea class="form-control" id="address" rows="2" placeholder="Mahalle, cadde, sokak ve kapı no" required></textarea>
                </div>
            </div>

            <!-- Resim Galerisi -->
            <div class="form-section">
                <h2 class="section-title">RESİM GALERİSİ</h2>

                <div class="mb-3">
                    <label for="businessImages" class="form-label required-field">İşletme Fotoğrafları</label>
                    <input class="form-control" type="file" id="businessImages" multiple accept="image/*" required>
                    <small class="text-muted">En az 3 fotoğraf yükleyiniz (max 10MB each)</small>
                </div>

                <div class="row" id="imagePreviewContainer">
                    <!-- Yüklenen resimlerin önizlemesi buraya gelecek -->
                </div>
            </div>

            <!-- Gönder Butonu -->
            <div class="text-center mt-4">
                <button type="submit" class="btn btn-primary btn-lg px-5 py-3">KAYDI TAMAMLA</button>
            </div>
        </form>


    </div>

    <!-- Footer -->
    <footer class="text-center">
        <div class="container">
            <p class="mb-0">© 2023 PembeDünya. Tüm hakları saklıdır.</p>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Kategori seçimi
        function selectCategory(category) {
            document.getElementById('businessCategory').value = category;
            document.querySelectorAll('.category-card').forEach(card => {
                card.classList.remove('selected');
            });
            event.currentTarget.classList.add('selected');
        }

        // Resim önizleme
        document.getElementById('businessImages').addEventListener('change', function(event) {
            const previewContainer = document.getElementById('imagePreviewContainer');
            previewContainer.innerHTML = '';

            const files = event.target.files;
            for (let i = 0; i < files.length; i++) {
                const file = files[i];
                const reader = new FileReader();

                reader.onload = function(e) {
                    const colDiv = document.createElement('div');
                    colDiv.className = 'col-md-3 mb-3';

                    const imgDiv = document.createElement('div');
                    imgDiv.className = 'card';

                    const img = document.createElement('img');
                    img.src = e.target.result;
                    img.className = 'card-img-top';
                    img.style.height = '150px';
                    img.style.objectFit = 'cover';

                    const cardBody = document.createElement('div');
                    cardBody.className = 'card-body p-2';

                    const fileName = document.createElement('small');
                    fileName.className = 'text-muted';
                    fileName.textContent = file.name.length > 15 ? file.name.substring(0, 15) + '...' : file.name;

                    cardBody.appendChild(fileName);
                    imgDiv.appendChild(img);
                    imgDiv.appendChild(cardBody);
                    colDiv.appendChild(imgDiv);
                    previewContainer.appendChild(colDiv);
                }

                reader.readAsDataURL(file);
            }
        });
    </script>
</body>
</html>