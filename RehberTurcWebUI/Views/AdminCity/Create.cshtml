@using RehberTurcDAL.DTOs.CityDTO
@model CityCreateDTO
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid">
    <div class="row justify-content-end">
        <div class="col-md-12 col-lg-10">
            <div class="card border-0 bg-transparent">
                <div class="card-header bg-transparent border-0">
                    <h4 class="card-title">Yeni Şehir Ekle</h4>
                </div>
                <div class="card-body">
                    <!-- Hata/Success Mesajları -->
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
                    }
                    <form asp-action="Create" method="post">
                        @Html.AntiForgeryToken()
                        
                        <table class="table table-borderless align-middle float-end">
                            <tr>
                                <td width="30%"><label asp-for="Tittle" class="form-label"></label></td>
                                <td>
                                    <input asp-for="Tittle" class="form-control" required>
                                    <span asp-validation-for="Tittle" class="text-danger"></span>
                                </td>
                            </tr>
                            <tr>
                                <td><label asp-for="CreatedDate" class="form-label"></label></td>
                                <td>
                                    <input asp-for="CreatedDate" class="form-control" type="date" required>
                                    <span asp-validation-for="CreatedDate" class="text-danger"></span>
                                </td>
                            </tr>
                            <tr>
                                <td><label asp-for="Description" class="form-label">Bilgi</label></td>
                                <td>
                                    <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </td>
                            </tr>
                            <tr>
                                <div class="form-group">
                                    <label>Resim</label>
                                    <input type="file" class="form-control" name="files" multiple>
                                </div>
                            </tr>
                            <tr>
                                <td width="30%"><label asp-for="CountryId" class="form-label"></label></td>
                                <td>
                                    <input asp-for="CountryId" class="form-control" required>
                                    <span asp-validation-for="CountryId" class="text-danger"></span>
                                </td>
                            </tr>
